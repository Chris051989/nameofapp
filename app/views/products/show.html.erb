<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>String:</strong>
  <%= @product.string %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>


<div class="container" id="image">
   <div class="row">
    <div class="col-md-6 col-xs-12">
    <p>
    <strong>Image url:</strong>
    <%= image_tag @product.image_url %>
    </p>
   </div> 
  </div>
</div>




<p>
  <strong>Colour:</strong>
  <%= @product.colour %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div> 
</p>

<!--render 'new_comment is necessary, otherwise embedding the rating function does not seem to work--> 
  <%= render 'new_comment' %>
  <%= render 'comments' %>

